<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" android:orientation="horizontal"
              android:layout_width="match_parent"
              android:padding="5dp"
              android:layout_height="wrap_content">
    <com.project.trello_fintech.views.AvatarView
            android:id="@+id/avatar"
            android:paddingStart="5dp" android:paddingEnd="5dp"
            android:layout_width="50dp" android:layout_height="50dp" />
    <LinearLayout
            android:orientation="vertical"
            android:paddingStart="10dp" android:paddingEnd="10dp"
            android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView
                    android:id="@+id/author"
                    android:textStyle="bold"
                    android:paddingEnd="5dp"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    tools:ignore="RtlSymmetry"/>
            <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content" android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
                android:id="@+id/text"
                android:layout_width="match_parent" android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>