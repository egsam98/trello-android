<?xml version="1.0" encoding="utf-8"?>
<com.project.trello_fintech.views.InterceptTouchCardView xmlns:android="http://schemas.android.com/apk/res/android"
                                                         android:id="@+id/task"
                                                         android:elevation="2dp"
                                                         android:layout_marginEnd="20dp"
                                                         android:layout_marginStart="20dp"
                                                         android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout
            android:id="@+id/wrapper"
            android:orientation="vertical"
            android:background="@drawable/grey_border"
            android:layout_width="match_parent" android:layout_height="match_parent">
        <TextView
                android:id="@+id/task_title"
                android:textSize="15sp"
                android:padding="7dp"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:textStyle="bold"
                android:gravity="start|center"
                android:minHeight="55dp"
                android:layout_width="match_parent" android:layout_height="wrap_content" />
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent" android:layout_height="wrap_content">
            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/attachments_preview"
                    android:layout_width="wrap_content" android:layout_height="wrap_content" />
            <TextView
                    android:id="@+id/plus_n_attachments_also"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:gravity="center"
                    android:layout_width="match_parent" android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>
</com.project.trello_fintech.views.InterceptTouchCardView>